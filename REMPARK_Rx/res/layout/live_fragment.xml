                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Axis"
                        android:text="@string/x" />

                    <TextView
                        android:id="@+id/live_accelerometer_x"
                        style="@style/Data" />

                    <TextView
                        style="@style/Units"
                        android:text="@string/accelerometer_unit" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LiveDataMargins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Axis"
                        android:text="@string/y" />

