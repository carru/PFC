                        style="@style/Axis"
                        android:text="@string/z" />

                    <TextView
                        android:id="@+id/live_accelerometer_z"
                        style="@style/Data" />

                    <TextView
                        style="@style/Units"
                        android:text="@string/accelerometer_unit" />
                </LinearLayout>

                <Space style="@style/SensorNameSeparatorSpace" />
            </LinearLayout>
        </LinearLayout>

        <Space style="@style/SensorNameSeparatorSpace" />

        <!-- Card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_no_border" >

            <!-- Items inside the card -->

            <LinearLayout
                style="@style/SmallMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
