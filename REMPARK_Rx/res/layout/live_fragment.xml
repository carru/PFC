                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Axis"
                        android:text="@string/y" />

                    <TextView
                        android:id="@+id/live_magnetometer_y"
                        style="@style/Data" />

                    <TextView
                        style="@style/Units"
                        android:text="@string/magnetometer_unit" />
