<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/logs_list_view"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:minHeight="?android:attr/listPreferredItemHeightSmall" >

    <TextView
        android:id="@+id/logs_list_file_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/logs_list_share_button"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/logs_list_share_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/logs_list_delete_button"
        android:adjustViewBounds="true"
        android:contentDescription="@string/stored_share"
        android:scaleType="center"
        android:src="@drawable/ic_action_share" />
    
    <ImageView
        android:id="@+id/logs_list_delete_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/stored_delete"
        android:scaleType="center"
        android:src="@drawable/ic_action_discard" />
    
</RelativeLayout>
