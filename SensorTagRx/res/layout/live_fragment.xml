                <TextView
                    style="@style/Units"
                    android:text="@string/gyroscope_unit" />
                
            </LinearLayout>
            
            <LinearLayout
                style="@style/LiveDataMargins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                
                <TextView
                    style="@style/Axis"
                    android:text="@string/y" />
                
                <TextView
                    style="@style/Data"
                    android:id="@+id/live_gyroscope_y" />
                
                <TextView
                    style="@style/Units"
                    android:text="@string/gyroscope_unit" />
                
            </LinearLayout>
            
            <LinearLayout
                style="@style/LiveDataMargins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                
                <TextView
                    style="@style/Axis"
                    android:text="@string/z" />
                
                <TextView
                    style="@style/Data"
                    android:id="@+id/live_gyroscope_z" />
                
                <TextView
                    style="@style/Units"
                    android:text="@string/gyroscope_unit" />
                
            </LinearLayout>
    		
            <Space style="@style/SensorNameSeparatorSpace" />
            
        </LinearLayout>
    		
    </LinearLayout>

</LinearLayout>